# üåê Configuraci√≥n de URLs del Servidor PRODUCCI√ìN
ASPNETCORE_URLS=http://0.0.0.0:80;https://0.0.0.0:443
SERVER_HOST=YOUR_SERVER_DOMAIN.com
SERVER_PORT=80
SERVER_HTTPS_PORT=443

# üîó URLs de Frontend (CORS) - CAMBIAR POR TU DOMINIO
FRONTEND_URL=https://YOUR_FRONTEND_DOMAIN.com
FRONTEND_PROD_URL=https://YOUR_FRONTEND_DOMAIN.com

# üóÑÔ∏è Base de Datos PostgreSQL - CAMBIAR POR TUS DATOS
DB_SERVER=YOUR_DB_HOST
DB_PORT=5432
DB_NAME=CHATDB_PROD
DB_USER=your_db_user
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD

# üîê JWT Configuration - GENERAR NUEVA CLAVE SEGURA
JWT_KEY=GENERATE_A_SUPER_SECURE_JWT_KEY_AT_LEAST_64_CHARACTERS_LONG_FOR_PRODUCTION
JWT_ISSUER=SupportChatService
JWT_AUDIENCE=SupportChatClients
JWT_EXPIRATION_MINUTES=60

# üåç Environment
ASPNETCORE_ENVIRONMENT=Production

# üìÇ File Upload
UPLOAD_PATH=/app/UploadedFiles
MAX_FILE_SIZE=10485760

# üîó API URLs para referencias cruzadas
API_BASE_URL=https://YOUR_SERVER_DOMAIN.com/api
SIGNALR_HUB_URL=https://YOUR_SERVER_DOMAIN.com/hubs/chat

# üîí Security Headers
ENABLE_HTTPS_REDIRECT=true
ENABLE_HSTS=true

# üìä Logging
LOG_LEVEL=Information
ENABLE_SWAGGER=false
